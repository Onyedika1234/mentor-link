generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(STUDENT)
  mentor    Mentor?
  mentorId  String?
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// mentor/create/:userId
model Mentor {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  expertise Json
  bio       String?
  rating    Float     @default(0)
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Session {
  id          String   @id @default(uuid())
  title       String
  description String?
  date        String
  time        String
  duration    String
  mentor      Mentor   @relation(fields: [mentorId], references: [id])
  mentorId    String
  student     User?    @relation(fields: [studentId], references: [id])
  studentId   String
  rating Float @default(0)
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())
}
enum Role {
  STUDENT
  MENTOR
  ADMIN
}

enum Status {
  PENDING
  APPROVED
  COMPLETED
  CANCELLED
}
